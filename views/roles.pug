doctype html
html
  include includes/head.pug

  body
    include includes/header.pug
    
    // Main Row
    div.row
    
      // Menu Col
      div.col.s2
        div.menu
          ul.side-nav.fixed#slide-out
            li
              i.material-icons.small web
              a(href="admin") Dashboard
            li
              i.material-icons.small group
              a(href="users") Users
            li.active
              i.material-icons.small local_offer
              a(href="roles") Roles
        
        
      // Content Col
      div.col.s9
        // Greeting
        div.row
          div.col.s12.offset-s1
            span.hide#user #{user}
            h4#givenName Hallo !
        
        // New Role input row
        div.row.valign-wrapper
          // Role input
          div.input-field.col.s6.offset-s1
            input#roleName(type="text", placeholder="New Role")
          // Add Button
          a.btn-floating.btn-medium.waves-effect.waves-light.btn#addNewRole
              i.material-icons add
        
        // Role List Row
        div.row
          // Role Data Col
          ul.collection.with-header.col.s7.offset-s1#role-list
            li.collection-header 
              h6.center-align Roles
            

    <!--JavaScript at end of body for optimized loading-->
    script(src='https://code.jquery.com/jquery-1.11.1.js')
    script(type='text/javascript', src='js/materialize.min.js')
    script(src='/socket.io/socket.io.js')
    script(type='text/javascript', src='js/roles.js')
