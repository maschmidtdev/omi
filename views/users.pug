doctype html
html
  include includes/head.pug

  body
    include includes/header.pug
    
    // Dropdown for user roles, invisible, populated dynamically by database
      ul#dropdown_roles.dropdown-content
    
    // Main Row
    div.row
    
      // Menu Col
      div.col.s2
        div.menu
          ul.side-nav.fixed#slide-out
            li
              i.material-icons.small web
              a(href="admin") Dashboard
            li.active
              i.material-icons.small group
              a(href="users") Users
            li
              i.material-icons.small local_offer
              a(href="roles") Roles
        
        
      // Content Col
      div.col.s10
        // Greeting
        div.row.col.s12.offset-s1
          span.hide#user #{user}
          h4#givenName Hallo !
            
        div.row.col.s12
          // Add Button
          div.col.s1.center-align
            a.btn-floating.btn-medium.waves-effect.waves-light.btn#scaleNewUserForm
              i.material-icons add
          // User form div
          div.row.col.s8#userFormDiv
            
        // User List Row
        div.row
          // User Data Col
          ul.collection.with-header.col.s8.offset-s1#user-list
            li.collection-header 
              h6.center-align Users
      
      
    
          

    <!--JavaScript at end of body for optimized loading-->
    script(src='https://code.jquery.com/jquery-1.11.1.js')
    script(type='text/javascript', src='js/materialize.min.js')
    script(src='/socket.io/socket.io.js')
    script(type='text/javascript', src='js/users.js')
